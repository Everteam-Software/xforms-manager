    <property as="xs:boolean" name="oxf.fr.version.*.*"                                         value="true"/>
    <property as="xs:boolean" name="oxf.fr.noscript-link.*.*"                                   value="true"/>

    <property as="xs:integer" name="oxf.fr.summary.page-size.*.*"                               value="10"/>
