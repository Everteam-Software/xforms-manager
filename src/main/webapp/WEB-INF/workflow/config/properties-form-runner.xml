    <property as="xs:anyURI"  name="oxf.fr.persistence.app.uri.orbeon.builder.form"             value="/fr/service/resource"/>
    <property as="xs:anyURI"  name="oxf.fr.persistence.app.uri.orbeon.bookshelf.form"           value="/fr/service/resource"/>
    <property as="xs:anyURI"  name="oxf.fr.persistence.app.uri.orbeon.provinces.form"           value="/fr/service/resource"/>

